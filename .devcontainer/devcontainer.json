{
    "name": "Stock Analysis Tool",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
        "ghcr.io/devcontainers/features/git:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-docker"
            ]
        }
    },
    "forwardPorts": [
        3000
    ],
    "portsAttributes": {
        "3000": {
            "label": "Stock Analysis App",
            "onAutoForward": "notify"
        }
    },
    "postCreateCommand": "cp nodejs-app/.env.example nodejs-app/.env 2>/dev/null || true",
    "postAttachCommand": "echo 'âœ… Codespace ready! Run: cd nodejs-app && docker compose up -d'"
}