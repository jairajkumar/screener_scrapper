{
    "name": "Stock Analysis Tool",
    "dockerComposeFile": [
        "../nodejs-app/docker-compose.yml",
        "docker-compose.extend.yml"
    ],
    "service": "stock-analysis",
    "workspaceFolder": "/usr/src/app",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "installOhMyZsh": true,
            "configureZshAsDefaultShell": true,
            "username": "nodejs",
            "userUid": "automatic",
            "userGid": "automatic"
        },
        "ghcr.io/devcontainers/features/git:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "ms-azuretools.vscode-docker",
                "humao.rest-client",
                "christian-kohler.npm-intellisense",
                "formulahendry.auto-rename-tag"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "zsh",
                "editor.formatOnSave": true,
                "editor.defaultFormatter": "esbenp.prettier-vscode"
            }
        }
    },
    "forwardPorts": [
        3000
    ],
    "portsAttributes": {
        "3000": {
            "label": "Stock Analysis App",
            "onAutoForward": "notify"
        }
    },
    "postCreateCommand": "cp nodejs-app/.env.example nodejs-app/.env && echo 'âœ… Created .env file. Edit nodejs-app/.env with your credentials, then run: docker compose -f .devcontainer/docker-compose.extend.yml up -d'",
    "remoteUser": "nodejs"
}