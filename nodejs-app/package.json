{
  "name": "stock-analysis-api",
  "version": "1.0.0",
  "description": "Stock Analysis Tool with API and Frontend",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --testPathPattern=tests/unit",
    "test:unit": "jest tests/unit --verbose",
    "test:integration": "jest tests/integration --runInBand",
    "test:e2e": "jest tests/e2e --runInBand",
    "test:html": "jest tests/e2e/htmlStructure.test.js --runInBand",
    "test:scraper": "jest tests/e2e/scraper.test.js --runInBand",
    "test:all": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest tests/unit --coverage",
    "analyze": "node scripts/analyze.js",
    "test-env": "node scripts/test-env.js",
    "docker:build": "./scripts/build-and-push.sh",
    "docker:run": "docker run -p 3000:3000 --env-file .env ghcr.io/jairajkumar/stock-analysis:latest",
    "docker:compose": "docker compose up -d"
  },
  "keywords": [
    "stock",
    "analysis",
    "api",
    "screener"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-fetch": "^2.7.0",
    "puppeteer-core": "^23.0.0"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.2.2"
  }
}