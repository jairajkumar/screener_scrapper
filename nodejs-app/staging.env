# Stock Analysis Tool Environment Variables
# Copy this file to .env and fill in your actual values

# Screener.in Login Credentials
SCREENER_EMAIL=your_email@example.com
SCREENER_PASSWORD=your_password_here

# Google Gemini AI API Key (Optional - for AI insights)
GEMINI_API_KEY=your_gemini_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Screener.in URLs
SCREENER_BASE_URL=https://www.screener.in
SCREENER_SEARCH_URL=https://www.screener.in/search/

# Investment Criteria (Optional - defaults are used if not set)
ROE_MIN=15
PE_MAX=20
DEBT_TO_EQUITY_MAX=0.5
ROCE_MIN=15
EPS_GROWTH_MIN=10
EPS_GROWTH_MAX=15
PEG_MAX=1
INTRINSIC_VALUE_MULTIPLIER=22.5
